---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ServicesCarousel from '../components/ServicesCarousel.jsx';
import StatsCounter from '../components/StatsCounter.jsx';
import TestimonialCarousel from '../components/TestimonialCarousel.jsx';
import WhyChooseUs from '../components/WhyChooseUs.jsx';
import QuoteRequest from '../components/QuoteRequest.astro';
import Footer from '../components/Footer.astro';
import WaveTransition from '../components/ui/WaveTransition.jsx';

const pageTitle = "Vishal Logistics Solutions | Your Trusted Global Logistics Partner";
const pageDescription = "Reliable, efficient, and cost-effective logistics solutions for businesses worldwide. Specializing in customs clearance, ocean freight, air freight, and warehousing.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  
  <main>
    <!-- Hero Section with Banner -->
    <section class="relative">
      <Hero />
    </section>
    
    <!-- Services Section -->
    <section id="services" class="py-16 bg-white relative">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-secondary-900 mb-4">Our Logistics Services</h2>
          <p class="text-secondary-600 max-w-2xl mx-auto">
            Comprehensive solutions tailored to meet your unique shipping and logistics requirements
          </p>
        </div>
        <ServicesCarousel client:load />
      </div>
      <WaveTransition color="#f5f7fa" />
    </section>
    
    <!-- Why Choose Us Section -->
    <section id="why-us" class="py-16 bg-secondary-50 relative">
      <div class="container mx-auto px-4">
        <WhyChooseUs client:visible />
      </div>
      <WaveTransition color="#ffffff" />
    </section>
    
    <!-- Stats Counter Section -->
    <section class="py-16 bg-white relative">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-secondary-900 mb-4">Our Impact by Numbers</h2>
          <p class="text-secondary-600 max-w-2xl mx-auto">
            We take pride in our achievements and the trust our clients place in us
          </p>
        </div>
        <StatsCounter client:visible />
      </div>
      <WaveTransition color="#f5f7fa" />
    </section>
    
    <!-- Testimonials Section -->
    <section id="testimonials" class="py-16 bg-secondary-50 relative">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-secondary-900 mb-4">What Our Clients Say</h2>
          <p class="text-secondary-600 max-w-2xl mx-auto">
            Don't just take our word for it, hear from our satisfied customers
          </p>
        </div>
        <TestimonialCarousel client:visible />
      </div>
      <WaveTransition color="#ffffff" />
    </section>
    
    <!-- Quote Request Section -->
    <section id="contact" class="py-16 bg-white relative">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-secondary-900 mb-4">Request a Quote</h2>
          <p class="text-secondary-600 max-w-2xl mx-auto">
            Get a customized logistics solution tailored to your specific needs
          </p>
        </div>
        <QuoteRequest />
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>