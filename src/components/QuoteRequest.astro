<section id="contact" class="pt-8 pb-16 relative">
  <div class="container mx-auto px-4 pt-12">
    <div class="max-w-4xl mx-auto bg-gradient-to-r from-primary-600 to-primary-700 rounded-2xl shadow-lg overflow-hidden relative">
      <!-- Background pattern -->
      <div class="absolute inset-0 opacity-10">
        <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%">
          <defs>
            <pattern id="pattern" width="30" height="30" patternUnits="userSpaceOnUse">
              <path d="M0 30L30 0H15L0 15M30 30V15L15 30" fill="none" stroke="white" stroke-width="1"/>
            </pattern>
          </defs>
          <rect width="100%" height="100%" fill="url(#pattern)"/>
        </svg>
      </div>
      
      <!-- Content -->
      <div class="py-10 px-6 md:px-10 text-center text-white relative z-10">
        <h2 class="text-2xl md:text-3xl font-bold mb-4 font-display">Ready to Get Started?</h2>
        <p class="text-base md:text-lg max-w-2xl mx-auto mb-8 text-primary-50">
          Contact us for a personalized quote tailored to your logistics needs
        </p>
        
        <div class="flex flex-col sm:flex-row justify-center gap-3">
          <button 
            id="quoteRequestBtn"
            class="inline-block bg-white text-primary-700 hover:bg-primary-50 px-6 py-3 rounded-full font-medium text-base transition-all duration-300 transform hover:scale-105 shadow-md hover:shadow-lg"
          >
            <span class="flex items-center justify-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              Request a Quote
            </span>
          </button>
          
          <a 
            href="tel:+918439312613" 
            class="inline-block bg-transparent hover:bg-white/10 text-white border-2 border-white px-6 py-3 rounded-full font-medium text-base transition-all duration-300 transform hover:scale-105"
          >
            <span class="flex items-center justify-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              Call Us
            </span>
          </a>
        </div>
        
        <!-- Email address display (shown when popup is closed) -->
        <div class="mt-4 text-sm text-white/80">
          Or email us directly at: <span class="font-medium select-all">info@vishallogistics.in</span>
        </div>
        
        <!-- Animated shipping icon with animation -->
        <div class="hidden md:block absolute -bottom-4 -right-4 opacity-15">
          <svg class="w-36 h-36 text-white animate-pulse" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z" />
          </svg>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Email Options Dialog -->
  <div id="emailOptionsDialog" class="fixed inset-0 bg-black/50 z-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
      <h3 class="text-xl font-bold text-gray-800 mb-4">Contact Options</h3>
      
      <div class="space-y-4">
        <p class="text-gray-600">Choose how you'd like to contact us:</p>
        
        <a href="https://mail.google.com/mail/?view=cm&fs=1&to=info@vishallogistics.in&su=Quote%20Request&body=I%20would%20like%20to%20request%20a%20quote%20for%20logistics%20services." 
           target="_blank" 
           class="block w-full text-center bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded transition-colors">
          Open in Gmail
        </a>
        
        <a href="mailto:info@vishallogistics.in?subject=Quote%20Request&body=I%20would%20like%20to%20request%20a%20quote%20for%20logistics%20services." 
           class="block w-full text-center bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded transition-colors">
          Open in Default Email Client
        </a>
        
        <div class="pt-2 border-t border-gray-200">
          <p class="text-gray-700 mb-2">Or copy our email address:</p>
          <div class="flex">
            <input type="text" value="info@vishallogistics.in" id="emailCopy" readonly class="flex-1 border border-gray-300 rounded-l px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
            <button id="copyEmailBtn" class="bg-gray-200 hover:bg-gray-300 px-4 py-2 rounded-r border-r border-t border-b border-gray-300 transition-colors">
              Copy
            </button>
          </div>
        </div>
      </div>
      
      <div class="mt-6 text-right">
        <button id="closeDialogBtn" class="text-gray-600 hover:text-gray-800 font-medium">
          Close
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const quoteRequestBtn = document.getElementById('quoteRequestBtn');
    const emailOptionsDialog = document.getElementById('emailOptionsDialog');
    const closeDialogBtn = document.getElementById('closeDialogBtn');
    const copyEmailBtn = document.getElementById('copyEmailBtn');
    const emailCopy = document.getElementById('emailCopy') as HTMLInputElement;
    
    if (quoteRequestBtn) {
      // Open dialog when request button is clicked
      quoteRequestBtn.addEventListener('click', () => {
        if (emailOptionsDialog) {
          emailOptionsDialog.classList.remove('hidden');
          document.body.style.overflow = 'hidden'; // Prevent scrolling
        }
      });
    }
    
    if (closeDialogBtn) {
      // Close dialog
      closeDialogBtn.addEventListener('click', () => {
        if (emailOptionsDialog) {
          emailOptionsDialog.classList.add('hidden');
          document.body.style.overflow = ''; // Restore scrolling
        }
      });
    }
    
    if (emailOptionsDialog) {
      // Close dialog if clicking outside content
      emailOptionsDialog.addEventListener('click', (e) => {
        if (e.target === emailOptionsDialog) {
          emailOptionsDialog.classList.add('hidden');
          document.body.style.overflow = ''; // Restore scrolling
        }
      });
    }
    
    if (copyEmailBtn && emailCopy) {
      // Copy email button
      copyEmailBtn.addEventListener('click', async () => {
        emailCopy.select();
        try {
          await navigator.clipboard.writeText(emailCopy.value);
          copyEmailBtn.textContent = 'Copied!';
          setTimeout(() => {
            copyEmailBtn.textContent = 'Copy';
          }, 2000);
        } catch (err) {
          console.error('Failed to copy: ', err);
        }
      });
    }
  });
</script>