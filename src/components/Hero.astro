<!-- src/components/Hero.astro -->
---
import VideoBackground from './ui/VideoBackground.jsx';
---

<section class="hero-section relative min-h-screen flex items-center pt-16 overflow-hidden">
  <!-- Video Background -->
  <VideoBackground 
    videoSrc="/video.webm" 
    overlayOpacity={0.7} 
    client:load
  />
  
  <!-- Animated particles layer -->
  <div class="particle-container"></div>
  
  <div class="container mx-auto px-4 relative z-10 py-20">
    <div class="max-w-2xl text-white hero-content">
      <!-- Animated badge with glow effect -->
      <div class="badge-wrapper mb-6">
        <span class="hero-badge px-4 py-2 rounded-full backdrop-blur-sm font-medium">
          <span class="badge-icon">‚öì</span> Premium Global Logistics
        </span>
      </div>
      
      <!-- Main headline with improved typography -->
      <h1 class="headline text-5xl md:text-6xl lg:text-7xl font-bold mb-6 tracking-tight leading-none">
        <span class="headline-main">Navigating Your Cargo</span>
        <span class="headline-sub">Across Every <span class="text-highlight">Ocean</span> & <span class="text-highlight">Horizon</span></span>
      </h1>
      
      <p class="description text-xl md:text-2xl mb-10 font-light leading-relaxed max-w-xl">
        From port to destination, we deliver reliability across the seven seas with unmatched precision and care.
      </p>
      
      <!-- Enhanced call to action buttons -->
      <div class="action-buttons flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-6">
        <a 
          href="#contact" 
          class="cta-primary px-8 py-4 rounded-full font-bold text-lg transition-all duration-300 text-center relative overflow-hidden group"
        >
          <span class="relative z-10">Request Custom Quote</span>
          <span class="absolute inset-0 bg-white opacity-0 group-hover:opacity-10 transition-opacity"></span>
        </a>
        
        <a 
          href="#services" 
          class="cta-secondary px-8 py-4 rounded-full font-bold text-lg transition-all duration-300 text-center relative overflow-hidden group"
        >
          <span class="relative z-10">Explore Services</span>
          <span class="btn-shine"></span>
        </a>
      </div>
      
      <!-- Enhanced trust indicators with icons -->
      <div class="trust-indicators mt-16 flex flex-wrap items-center gap-8 opacity-85">
        <div class="flex items-center">
          <span class="indicator-icon">‚è±Ô∏è</span>
          <span class="text-sm ml-2">24/7 Support</span>
        </div>
        <div class="flex items-center">
          <span class="indicator-icon">üåê</span>
          <span class="text-sm ml-2">Global Network</span>
        </div>
        <div class="flex items-center">
          <span class="indicator-icon">ü§ù</span>
          <span class="text-sm ml-2">Trusted by 2000+ Businesses</span>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Create particles with improved variety
    const particleContainer = document.querySelector('.particle-container');
    if (particleContainer) {
      for (let i = 0; i < 70; i++) {
        const particle = document.createElement('div');
        particle.classList.add('particle');
        
        // Randomize particle properties for more organic feel
        const size = Math.random() * 5 + 1;
        const opacity = 0.1 + Math.random() * 0.4;
        const duration = 5 + Math.random() * 15;
        const delay = Math.random() * 5;
        
        particle.style.left = `${Math.random() * 100}%`;
        particle.style.top = `${Math.random() * 100}%`;
        particle.style.width = `${size}px`;
        particle.style.height = `${size}px`;
        particle.style.opacity = `${opacity}`;
        particle.style.animationDuration = `${duration}s`;
        particle.style.animationDelay = `${delay}s`;
        
        // Add some larger particles with different styles
        if (i % 15 === 0) {
          particle.classList.add('particle-large');
          particle.style.width = `${size + 3}px`;
          particle.style.height = `${size + 3}px`;
          particle.style.filter = 'blur(1px)';
        }
        
        particleContainer.appendChild(particle);
      }
    }
    
    // Staggered entrance animations
    const animateElements = [
      '.badge-wrapper',
      '.headline', 
      '.description', 
      '.action-buttons', 
      '.trust-indicators'
    ];
    
    animateElements.forEach((selector, index) => {
      setTimeout(() => {
        document.querySelector(selector)?.classList.add('animate-in');
      }, 300 + (index * 300));
    });
    
    // Scroll indicator functionality
    const scrollIndicator = document.querySelector('.scroll-indicator');
    if (scrollIndicator) {
      scrollIndicator.addEventListener('click', () => {
        window.scrollTo({
          top: window.innerHeight,
          behavior: 'smooth'
        });
      });
    }
  });
</script>

<style>
  /* Hero section styling */
  .hero-section {
    background: #000;
    color: #fff;
    min-height: 100vh;
  }
  
  /* Enhanced particle effects */
  .particle-container {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 1;
  }
  
  .particle {
    position: absolute;
    background-color: #fff;
    border-radius: 50%;
    animation: float-particle linear infinite;
  }
  
  .particle-large {
    background: linear-gradient(90deg, rgba(255,255,255,0.8), rgba(100,210,255,0.6));
    box-shadow: 0 0 5px rgba(255,255,255,0.5);
  }
  
  /* Improved text & Content Styling */
  .hero-badge {
    background: linear-gradient(90deg, rgba(0,139,255,0.2) 0%, rgba(0,202,255,0.15) 100%);
    border: 1px solid rgba(255,255,255,0.25);
    box-shadow: 0 0 25px rgba(0,139,255,0.4);
    transform: translateY(20px);
    opacity: 0;
    transition: all 0.8s cubic-bezier(0.22, 1, 0.36, 1);
  }
  
  .badge-icon {
    margin-right: 5px;
    display: inline-block;
    animation: bob 2.5s ease-in-out infinite;
  }
  
  .headline {
    display: flex;
    flex-direction: column;
    line-height: 1.1;
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.1s;
  }
  
  .headline-main {
    background: linear-gradient(90deg, #ffffff, #64d2ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
    font-weight: 800;
    text-shadow: 0 5px 15px rgba(0,0,0,0.3);
  }
  
  .headline-sub {
    margin-top: 0.5rem;
  }
  
  .text-highlight {
    color: #4fc3f7;
    position: relative;
    z-index: 1;
    font-weight: 800;
  }
  
  .text-highlight::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 30%;
    background: rgba(0,139,255,0.3);
    z-index: -1;
    transform: skewX(-15deg);
  }
  
  .description {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.2s;
    text-shadow: 0 2px 10px rgba(0,0,0,0.3);
  }
  
  .action-buttons {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.3s;
  }
  
  .cta-primary {
    background: linear-gradient(90deg, #0078CC 0%, #00A3FF 100%);
    color: #fff;
    box-shadow: 0 5px 20px rgba(0,123,255,0.5);
    transition: all 0.3s ease;
  }
  
  .cta-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(0,123,255,0.7);
  }
  
  .cta-secondary {
    background: transparent;
    color: #fff;
    border: 2px solid rgba(255,255,255,0.4);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .cta-secondary:hover {
    background: rgba(255,255,255,0.1);
    border-color: rgba(255,255,255,0.6);
    transform: translateY(-3px);
  }
  
  .btn-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg, 
      transparent, 
      rgba(255,255,255,0.3), 
      transparent
    );
    transition: 0.5s;
  }
  
  .cta-secondary:hover .btn-shine {
    left: 100%;
    transition: 0.7s;
  }
  
  .trust-indicators {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.22, 1, 0.36, 1) 0.4s;
  }
  
  .indicator-icon {
    display: inline-block;
    animation: pulse 3s infinite;
    font-size: 1.25rem;
  }
  
  /* Enhanced scroll indicator */
  .scroll-indicator {
    animation: fade-in-up 1s ease forwards 2s;
    opacity: 0;
  }
  
  .scroll-dot {
    animation: scroll-dot 2s infinite;
  }
  
  /* Animation classes */
  .animate-in {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Keyframe animations */
  @keyframes float-particle {
    0% {
      transform: translateY(0) translateX(0);
    }
    100% {
      transform: translateY(-100vh) translateX(20px);
    }
  }
  
  @keyframes bob {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-5px);
    }
  }
  
  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.05);
      opacity: 0.8;
    }
  }
  
  @keyframes scroll-dot {
    0% {
      opacity: 1;
      transform: translateY(0);
    }
    80% {
      opacity: 0;
      transform: translateY(6px);
    }
    81% {
      opacity: 0;
      transform: translateY(0);
    }
    100% {
      opacity: 1;
    }
  }
  
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px) translateX(-50%);
    }
    to {
      opacity: 0.75;
      transform: translateY(0) translateX(-50%);
    }
  }
  
  @keyframes animate-scroll-down {
    0% {
      transform: translateY(0);
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
    100% {
      transform: translateY(6px);
      opacity: 0;
    }
  }
</style>